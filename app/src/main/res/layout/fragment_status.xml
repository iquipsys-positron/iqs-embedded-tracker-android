<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iquipsys.tracker.phone.status.StatusFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">

        <TextView
            android:id="@+id/statusLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_organization"
            app:layout_column="0"
            app:layout_row="0"/>

        <TextView
            android:id="@+id/statusValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_last_update"
            app:layout_column="0"
            app:layout_row="1"/>

        <TextView
            android:id="@+id/statusLastUpdateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_long"
            app:layout_column="0"
            app:layout_row="2"/>

        <TextView
            android:id="@+id/statusLongTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="2"
            android:text="XXX"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_lat"
            app:layout_column="0"
            app:layout_row="3"/>

        <TextView
            android:id="@+id/statusLatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_alt"
            app:layout_column="0"
            app:layout_row="4"/>

        <TextView
            android:id="@+id/statusAltTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="4"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_speed"
            app:layout_column="0"
            app:layout_row="5"/>

        <TextView
            android:id="@+id/statusSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="5"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/label_angle"
            app:layout_column="0"
            app:layout_row="6"/>

        <TextView
            android:id="@+id/statusAngleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="6"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            app:layout_row="7"
            android:text="@string/label_mobility" />

        <TextView
            android:id="@+id/statusMobilityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_column="1"
            app:layout_row="7"
            app:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/label_beacons"
            app:layout_column="0"
            app:layout_row="8"/>

        <TextView
            android:id="@+id/statusBeaconsTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="8" />

        <TextView
            android:id="@+id/statusBeaconsTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="9"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/statusBeaconsTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="10"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/statusBeaconsTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="8"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="11"
            android:visibility="gone"/>

    </android.support.v7.widget.GridLayout>

    <fragment
        android:id="@+id/statusMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
